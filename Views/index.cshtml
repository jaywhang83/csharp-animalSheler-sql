<h1>Animal Shelter</h1>
<h2>All Animal types<h2>
  @if(@Model.Count == 0)
  {
    <p>There are no Animals.</p>
  }
  else
  {
    <ul>
      @foreach(var type in Model)
      {
        <li><a href="/@type.GetId()">@type.GetAnimalType()</a></li>
      }
    </ul>
    <form action="/animalTypes/delete" method="post">
      <button type="submit">Clear all animal types</button>
    </form>
  }

<h4><a href="/animals">View Animals</a></h4>
<h4><a href="/animals/breed">View animals by breed</a></h4>
<h4><a href="/animals/alphabetical">View Animals by alphabetically</a></h4>
